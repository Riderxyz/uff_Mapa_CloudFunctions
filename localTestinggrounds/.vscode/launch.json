{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TS with Nodemon",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": ["--inspect", "--config", "nodemon.json"],
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true
    }
  ]
}
